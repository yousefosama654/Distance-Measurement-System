#include "lcd.h"
#include"avr/io.h"
#include"ultrasonic.h"
int main() {
	uint16 dist=0;
	SREG |= (1 << 7);
	LCD_init();
	Ultrasonic_init();
	LCD_displayString("Distance= ");
	while (1) {
		dist = Ultrasonic_readDistance();
		if (dist >= 100) {
			LCD_moveCursor(0, 10);
			LCD_intgerToString(dist-3);
			LCD_displayString("Cm");
		} else if() {
			// some code
			LCD_moveCursor(0, 10);
			LCD_intgerToString(dist-3);
			LCD_displayCharacter(' ');
			LCD_displayString("Cm");
		}
	}
}
